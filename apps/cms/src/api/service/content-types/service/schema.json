{
  "kind": "collectionType",
  "collectionName": "services",
  "info": {
    "singularName": "service",
    "pluralName": "services",
    "displayName": "Service",
    "description": "Service offerings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "icon": {
      "type": "string"
    },
    "shortDescription": {
      "type": "text"
    },
    "longDescription": {
      "type": "richtext"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "keyBenefits": {
      "type": "component",
      "repeatable": true,
      "component": "shared.benefit-item"
    },
    "processSteps": {
      "type": "component",
      "repeatable": true,
      "component": "shared.process-step"
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "projects": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project.project",
      "mappedBy": "servicesUsed"
    }
  }
}

